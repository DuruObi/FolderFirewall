{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run FolderFirewall Backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/app.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Snapshot Clone Script",
      "type": "cppdbg",
      "request": "launch",
      "program": "/bin/bash",
      "args": ["${workspaceFolder}/scripts/snapshot_clone.sh"],
      "console": "integratedTerminal"
    }
  ]
}
